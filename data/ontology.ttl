@prefix : <http://example.org/myproject#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix bibo: <http://purl.org/ontology/bibo/> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix schema: <https://schema.org/> .


###################################################################
# CLASSES
###################################################################

:HistoricalAuthor a rdfs:Class ;
    rdfs:label "Historical Author" ;
    rdfs:subClassOf foaf:Person .

:HistoricalText a rdfs:Class ;
    rdfs:label "Historical Text" ;
    rdfs:subClassOf bibo:Book .

:ModernEdition a rdfs:Class ;
    rdfs:label "Modern Edition" ;
    rdfs:subClassOf bibo:Book .

:SubjectCategory a rdfs:Class ;
    rdfs:label "Subject Category" ;
    rdfs:subClassOf skos:Concept .


###################################################################
# PROPERTIES
###################################################################

### Authority identifiers
:hasVIAF a rdf:Property ;
    rdfs:subPropertyOf owl:sameAs .

:hasWikidata a rdf:Property ;
    rdfs:subPropertyOf owl:sameAs .

:hasWikipedia a rdf:Property ;
    rdfs:subPropertyOf schema:sameAs .


### Historical text authorship
:hasAuthor a rdf:Property ;
    rdfs:domain :HistoricalText ;
    rdfs:range  :HistoricalAuthor .

:authorOf a rdf:Property ;
    rdfs:domain :HistoricalAuthor ;
    rdfs:range  :HistoricalText ;
    owl:inverseOf :hasAuthor .


### Modern edition links
:editionOf a rdf:Property ;
    rdfs:domain :ModernEdition ;
    rdfs:range  :HistoricalText ;
    rdfs:subPropertyOf dcterms:relation .

:editionBy a rdf:Property ;
    rdfs:domain :ModernEdition ;
    rdfs:range  :HistoricalAuthor ;
    rdfs:subPropertyOf dcterms:creator .


### Subjects (optional)
:hasSubject a rdf:Property ;
    rdfs:domain :HistoricalText ;
    rdfs:range  :SubjectCategory ;
    rdfs:subPropertyOf dcterms:subject .
